<section class="form-auth text-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <img class="mb-4" src="<%= asset_path('rd_logo.png') %>" alt="" width="200" height="100">
    <h1 class="h3 mb-3 fw-normal">Please Sign In</h1>

    <%= f.email_field :email, autofocus: true, class: "form-control", id: "inputEmail", placeholder: "Email Address", autocomplete: "current-email"%>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "inputPassword", placeholder: "Password"%>

    <div class="checkbox mb-3">
      <label>
        <input type="checkbox" value="remember-me"> Remember me
      </label>
    </div>
    <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
  <% end %>
  <%= render "devise/shared/links" %>
</section>


